<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkGrey"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_userName"
        android:layout_alignStart="@+id/tv_userName"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_country"
        android:layout_alignStart="@+id/tv_userName"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_userID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_email"
        android:layout_alignStart="@+id/tv_userName"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_usertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:paddingBottom="5dp"
        android:text="Host name:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_countrytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_userName"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"
        android:text="Host Country:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_emailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_countrytext"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"
        android:text="Host email:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_userIDtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_email"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"
        android:text="Host ID:"
        android:textStyle="bold" />

</RelativeLayout>