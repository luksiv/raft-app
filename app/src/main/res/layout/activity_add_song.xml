<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSongActivity"
    android:id="@+id/root_addsongactivity"
    android:background="@drawable/ic_gradiant_black_to_grey">


    <LinearLayout
        android:id="@+id/root_searchBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <EditText
            android:id="@+id/et_searchInput"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:textSize="24sp"
            android:hint="Enter song name or artist name"
            android:layout_weight="12"
            android:background="@drawable/ic_edit_text_background"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_magnify_white_48dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lw_searchResults"
        android:layout_below="@id/root_searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>