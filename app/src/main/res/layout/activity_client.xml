<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientActivity">

    <TextView
        android:id="@+id/tw_RoomId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="RoomID"/>
    <TextView
        android:id="@+id/tw_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"/>

    <ImageButton
        android:id="@+id/btn_AddSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_input_add"/>

    <Button
        android:id="@+id/btn_add_song"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Add Song" />

    <Button
        android:id="@+id/btn_get_songs"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_AddSong"
        android:layout_alignParentStart="true"
        android:text="Get Songs" />

    <Button
        android:id="@+id/btn_play_next"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_get_songs"
        android:layout_alignParentStart="true"
        android:text="Play Next" />

</RelativeLayout>